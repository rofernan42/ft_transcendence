<div id="edit-panel">
  <div class="panel edit-account" style="display:inline-block;vertical-align:middle;">
    <div class="header">
      <h1>Sign up</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        Username<br/>
        <%= f.text_field :username, autofocus: true %>
      </div>

      <div class="field">
        Email<br/>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        Password
        <% if @minimum_password_length %>
        <i style="font-size:12px">(<%= @minimum_password_length %> characters minimum)</i>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        Password confirmation<br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.hidden_field :avatar, value: "/assets/blank-profile-picture.jpg" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "edit save" %>
      </div>
    <% end %>
  </div>
  &emsp;<b>OR</b>&emsp;
  <div class="panel edit-account" style="display:inline-block;vertical-align:middle;">
    <img style="width:60px;height:60px" src="/assets/42_logo.png"><br/>
    <a href="/users/auth/marvin"><button class="edit save">Sign up with 42</button></a>
  </div>
</div>